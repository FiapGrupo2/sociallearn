<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel" type="br.com.fiap.sociallearn.viewmodel.home.HomeViewModel" />
    </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvWelcomeSugestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tvWelcomeSugestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_sugestions"
            android:textColor="#9EB0BC"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivCursoJava"
                android:layout_width="150dp"
                android:layout_height="93dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/javacourse"
                android:clickable="true"
                android:onClick="@{_ -> viewModel.goToJavaActivity()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/ivCursoAngular"
                android:layout_width="150dp"
                android:layout_height="93dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/angularcouse"
                android:clickable="true"
                android:onClick="@{_ -> viewModel.goToAngularActivity()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

    <ImageView
            android:id="@+id/ivCursoNode"
            android:layout_width="150dp"
            android:layout_height="93dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/nodejscourse"
            android:clickable="true"
            android:onClick="@{_ -> viewModel.goToNodeActivity()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ivCursoBoot"
            android:layout_width="150dp"
            android:layout_height="93dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/boostrapcourse"
            android:clickable="true"
            android:onClick="@{_ -> viewModel.goToBootActivity()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">


        <ImageView
            android:id="@+id/ivCursoFront"
            android:layout_width="150dp"
            android:layout_height="93dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/frontcourse"
            android:clickable="true"
            android:onClick="@{_ -> viewModel.goToFrontActivity()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ivCursoJavaScript"
            android:layout_width="150dp"
            android:layout_height="93dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/javascriptcourse"
            android:clickable="true"
            android:onClick="@{_ -> viewModel.goToJSActivity()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">


        <ImageView
            android:id="@+id/ivCursoJavaRuby"
            android:layout_width="150dp"
            android:layout_height="93dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/courserubyxjavascript"
            android:clickable="true"
            android:onClick="@{_ -> viewModel.goToJRActivity()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <ImageView
            android:id="@+id/ivCursoSalesforce"
            android:layout_width="150dp"
            android:layout_height="93dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/salesforcecourse"
            android:clickable="true"
            android:onClick="@{_ -> viewModel.goToSalesActivity()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">


        <ImageView
            android:id="@+id/ivCursoSecurity"
            android:layout_width="150dp"
            android:layout_height="93dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/securitycourse"
            android:clickable="true"
            android:onClick="@{_ -> viewModel.goToSecurityActivity()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ivCursoSQL"
            android:layout_width="150dp"
            android:layout_height="93dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/sqlcourse"
            android:clickable="true"
            android:onClick="@{_ -> viewModel.goToSQActivity()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">


        <ImageView
            android:id="@+id/ivCursoPSQL"
            android:layout_width="150dp"
            android:layout_height="93dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/postgrecourse"
            android:clickable="true"
            android:onClick="@{_ -> viewModel.goToPSQLActivity()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <ImageView
            android:id="@+id/ivCursoC"
            android:layout_width="150dp"
            android:layout_height="93dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ccourse2"
            android:clickable="true"
            android:onClick="@{_ -> viewModel.goToCActivity()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    </LinearLayout>

</ScrollView>
</layout>
