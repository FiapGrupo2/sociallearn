<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.fiap.sociallearn.view.home.HomeConteudoActivity">

    <TextView
        android:id="@+id/txtSaudacao"
        android:layout_width="34dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="363dp"
        android:text="Ola"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSugestao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="136dp"
        android:text="Separamos algumas sugestões para você"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSaudacao" />

    <Button
        android:id="@+id/btnContinuarAulas"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:layout_marginStart="278dp"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="1dp"
        android:text="onde parei?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>