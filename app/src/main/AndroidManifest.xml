<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.fiap.sociallearn">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".main.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialLearn">

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".ui.search.UserSearchByContentActivity" />

        <provider
            android:name="br.com.fiap.sociallearn.SearchableProvider"
            android:authorities="br.com.fiap.sociallearn.SearchableProvider"
            android:exported="false"
            tools:ignore="Instantiatable" />

        <activity android:name=".ui.cursos.CCourseActivity" />
        <activity android:name=".ui.cursos.PSQLCourseActivity" />
        <activity android:name=".ui.cursos.SQLCourseActivity" />
        <activity android:name=".ui.cursos.SecurityCourseActivity" />
        <activity android:name=".ui.cursos.SalesCourseActivity" />
        <activity android:name=".ui.cursos.JavaRubyCourseActivity" />
        <activity android:name=".ui.cursos.JavaSCourseActivity" />
        <activity android:name=".ui.cursos.FrontCourseActivity" />
        <activity android:name=".ui.cursos.BootCourseActivity" />
        <activity android:name=".ui.cursos.NodeCourseActivity" />
        <activity android:name=".ui.cursos.AngularCursoActivity" />
        <activity android:name=".ui.cursos.JavaCourseActivity" />
        <activity android:name=".ui.login.ResetPasswordActivity" />
        <activity android:name=".ui.register.KnowledgeToLearnActivity" />
        <activity android:name=".ui.register.KnowledgeToTeachActivity" />
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.search.UserSearchByContentActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity android:name=".ui.signUp.SignUpActivity" />
        <activity android:name=".ui.home.HomeActivity">
            <meta-data
                android:name="android.app.searchable"
                android:value=".ui.search.UserSearchByContentActivity" />
        </activity>
    </application>

</manifest>